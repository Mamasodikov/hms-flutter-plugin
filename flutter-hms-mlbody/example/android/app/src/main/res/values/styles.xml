<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity. Automatically removed when
             the Flutter engine draws its first frame -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied to the Android Window as soon as the process has started.
         This theme determines the color of the Android Window while your
         Flutter UI initializes, as well as behind your Flutter UI while its
         running.

         This Theme is only used starting with V2 of Flutter's Android embedding. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- STYLES FOR LIVENESS -->


    <color name="acrcolor">#55000000</color>
    <color name="acrtextcolor">#FFFFFFFF</color>
    <color name="circlecolor">#cccccc</color>
    <color name="customviewtextcolor">#E6FFFFFF</color>
    <color name="dialogcolor">#FFFFFFFF</color>
    <color name="dialogcolorblue">#FF007DFF</color>
    <color name="livenessbg">#FF656DFF</color>
    <color name="progresscolorblue">#FF007DFF</color>
    <color name="statecolor">#FFFFFFFF</color>
    <color name="textcolor">#FF000000</color>
    <color name="texttipcolor">#E6000000</color>
    <item name="mlkit_liveness_auto_focus" type="id" />
    <item name="mlkit_liveness_decode" type="id" />
    <item name="mlkit_liveness_decode_face_ok" type="id" />
    <item name="mlkit_liveness_decode_failed" type="id" />
    <item name="mlkit_liveness_decode_low_power" type="id" />
    <item name="mlkit_liveness_decode_succeeded" type="id" />
    <item name="mlkit_liveness_detect_face_faceRotation" type="id" />
    <item name="mlkit_liveness_end_detect_liveness" type="id" />
    <item name="mlkit_liveness_quit" type="id" />
    <item name="mlkit_liveness_rec_failed" type="id" />
    <item name="mlkit_liveness_restart_preview" type="id" />
    <item name="mlkit_liveness_start_detect_face" type="id" />
    <item name="mlkit_liveness_start_detect_liveness" type="id" />
    <item name="mlkit_liveness_upload_detect_info" type="id" />
    <string name="mlkit_liveness_detect_backIcon" priority="translator">Go back</string>
    <string name="mlkit_liveness_detect_dialogtips" priority="LT">This screen doesn\'t support Split-screen mode. Please manually return it to full screen view.</string>
    <string name="mlkit_liveness_detect_dialogtipsnext" priority="LT">OK</string>
    <string name="mlkit_liveness_detect_identifying" priority="LT">Identifying…</string>
    <string name="mlkit_liveness_detect_name" priority="LT">Face detection</string>
    <string name="mlkit_liveness_detect_noface_is_detected" priority="LT">No face detected</string>
    <string name="mlkit_liveness_detect_tips" priority="LT">Position your face inside the frame. Make sure you\'re in a well-lit environment.</string>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="lightNoTitleTheme" parent="android:style/Theme.Light.NoTitleBar" />

    <declare-styleable name="CircleProgressView">
        <!-- 圆弧宽度 -->
        <attr name="tcpv_border_width" format="dimension" />
        <!-- 圆弧开始角度 -->
        <attr name="tcpv_start_angle" format="integer" />
        <!-- 圆弧空白角度 -->
        <attr name="tcpv_blank_angle" format="integer" />
        <!-- 动画持续时间 单位秒 -->
        <attr name="tcpv_animation_duration" format="integer" />
        <!-- 总进度 -->
        <attr name="tcpv_total_progress" format="integer" />
        <!-- 背景色 -->
        <attr name="tcpv_background_color" format="color" />
        <!-- 圆弧背景色 -->
        <attr name="tcpv_arc_background_color" format="color" />

        <!-- 进度圆弧开始色 -->
        <attr name="tcpv_arc_start_color" format="color" />
        <!-- 进度圆弧结束色 -->
        <attr name="tcpv_arc_end_color" format="color" />

        <!-- 半圆背景色 -->
        <attr name="tcpv_hint_background_color" format="color" />
        <!-- 字体颜色 -->
        <attr name="tcpv_hint_text_color" format="color" />
        <!-- 字体大小 -->
        <attr name="tcpv_hint_text_size" format="dimension" />
        <!-- 文字偏移量 -->
        <attr name="tcpv_hint_text_padding" format="dimension" />
        <!-- 文字 -->
        <attr name="tcpv_hint_text" format="string" />
        <!-- 是否显示半圆 -->
        <attr name="tcpv_hint_show" format="boolean" />
        <!--是否显示四分之一进度条           -->
        <attr name="showprocessfour" format="boolean" />
        <!-- 半圆覆盖比率 0.1 - 1 -->
        <attr name="tcpv_hint_semicircle_rate" format="float" />
        <attr name="backcolor" format="color" />

    </declare-styleable>

</resources>
